<div class="d-flex justify-content-center">
  <div class="card bg-text tw tc" style="width: 20rem;">
    <% if flash[:success] %>
      <div class="alert alert-success">
        <%= flash[:success] %>
      </div>
    <% end %>
    <div class="card-body">
      <h5 class="card-title">Status: <%= @order.status %></h5>
    </div>
    <ul class="list-group list-group-flush tc">
      <li class="list-group-item bg-text tw">First name: <%= @order.order_detail.first_name %></li>
      <li class="list-group-item bg-text tw">Last name: <%= @order.order_detail.last_name %></li>
      <li class="list-group-item bg-text tw">Phone number: <%= @order.order_detail.phone_number %></li>
      <li class="list-group-item bg-text tw">Country: <%= @order.order_detail.address.country %></li>
      <li class="list-group-item bg-text tw">City: <%= @order.order_detail.address.city %></li>
      <li class="list-group-item bg-text tw">Street: <%= @order.order_detail.address.street %></li>
      <li class="list-group-item bg-text tw">Comment: <%= @order.order_detail.address.comment %></li>
    </ul>
    <div class="card-body">
      <div class="card-body">
        <%= button_to "Cancel", order_path(@order), method: :delete, data: { confirm: "Are you sure you want to delete this order?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
