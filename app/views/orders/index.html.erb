<% if @user_orders.present? %>
  <div class="d-flex justify-content-center tw">
    <span class="rounded bg-text"><h1>Orders list</h1></span>
  </div>

  <% if flash[:success] %>
    <div class="d-flex justify-content-center tw">
      <div class="alert alert-danger" style="width: 20rem;">
        <%= flash[:success] %>
      </div>
    </div>
  <% end %>

  <% @user_orders.each do |order| %>
    <hr>
    <div class="d-flex justify-content-center">
      <div class="card bg-text tw tc" style="width: 20rem;">
        <div class="card-body">
          <h5 class="card-title">Status: <%= order.status %></h5>
        </div>

        <ul class="list-group list-group-flush tc">
          <li class="list-group-item bg-text tw">First name: <%= order.order_detail.first_name %></li>
          <li class="list-group-item bg-text tw">Last name: <%= order.order_detail.last_name %></li>
          <li class="list-group-item bg-text tw">Street: <%= order.order_detail.phone_number %></li>
        </ul>

        <%= link_to "more", order, class: "tw text-decoration-none" %>
        <div class="card-body">
            <%= button_to "Cancel", order_path(order), method: :delete, data: { confirm: "Are you sure you want to delete this order?" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<% else  %>
  <h1 class="tc tw">
    <span class="rounded bg-text">
      You have no order.
    </span>
  </h1>
<% end %>
