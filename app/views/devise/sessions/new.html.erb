<div class="row justify-content-center text-white">
  <div class="col-md-7 col-lg-5">
    <div class="wrap">
      <div class="login-wrap p-4 p-md-1">
        <br>
        <h2 class="text-center">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group mt-3">
            <%= f.label :email, class: "form-control-placeholder" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password, class: "form-control-placeholder" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, class: "form-control-placeholder" %>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.submit "Log in", class: "form-control btn btn-outline-light rounded submit px-3" %>
          </div>
        <% end %>
        <br><br>
      </div>
    </div>
  </div>
</div>
