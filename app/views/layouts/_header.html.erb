<header class="d-flex justify-content-center">
  <div class="container">
    <nav class="navbar navbar-expand-lg navbar-light justify-content-center">
      <div class="container justify-content-center">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse flex-grow-0 justify-content-between text-white rounded" style="background-color: rgba(50, 50, 50, 0.5);" id="navbarSupportedContent">
        <ul class="navbar-nav d-flex">
          <li class="nav-item active">
            <%= link_to "Products", products_path, class: "nav-link text-white", style: "font-size: 1.20rem;" %>
          </li>

          <li class="nav-item dropdown">
            <div class="dropdown ">
              <a class="nav-link text-white" style="font-size: 1.20rem;" href="#" id="categoriesDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories</a>
              <div class="dropdown-menu " style="background-color: var(--bs-warning)" aria-labelledby="categoriesDropdown">
                <% @categories.each do |category| %>
                  <%= link_to category.name, category_path(category), class: "dropdown-item" %>
                <% end %>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <%= link_to "Cart", cart_path(:id), form: {turbolink: false}, class: "nav-link text-white", style: "font-size: 1.20rem;" %>
          </li>

          <li class="nav-item">
            <%= link_to "Order", products_path, class: "nav-link text-white", style: "font-size: 1.20rem;" %>
          </li>

          <li class="nav-item ">
            <%= link_to "About us", about_us_path, class: "nav-link text-white", style: "font-size: 1.20rem;" %>
          </li>
        </ul>
      </div>
    </div>
    </nav>

    <div class="px-3 py-2">
      <div class="container d-flex flex-wrap justify-content-between">

        <%= search_form_for(@query, url: root_path, method: :get, class:"col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto") do |f| %>
          <div class="input-group">
            <%= f.search_field :name_cont_any, class: "form-control"%>
            <%= f.submit "Search", class: "btn btn-light"%>
          </div>
        <% end %>

        <div class="text-end">
          <% if user_signed_in?  %>
          <div class="container">
            <p class="text-white" style="display:inline-block"><%= current_user.first_name %> <%= current_user.last_name %></p>
            <%= button_to "Sign out", destroy_user_session_path, class: "btn btn-outline-secondary me-2", method: :delete, data: { turbo_confirm: "Are you sure?"}, form: {style: 'display:inline-block;'}  %>
            </div>
          <% else  %>
            <%= button_to "Log in", new_user_session_path, class: "btn btn-outline-light me-2", form: {style: 'display:inline-block;'}  %>
            <%= link_to "Sign up", new_user_registration_path, class: "btn btn-outline-warning", form: {style: 'display:inline-block;'} %>
          <% end %>
        </div>

      </div>
      <hr class="text-white">
    </div>
  </div>
</header>
